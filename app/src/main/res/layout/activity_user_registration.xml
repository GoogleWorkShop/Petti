<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    tools:context="com.firebase.petti.petti.DogRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.6"
        android:weightSum="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:weightSum="1">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/user_image"
                android:background="@drawable/dog_person_pic"
                android:scaleType="centerCrop"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:drawableLeft="@drawable/upload_picture"
                android:id="@+id/user_uploadButton"
                android:layout_gravity="fill_vertical"
                android:text="Upload"
                android:layout_below="@+id/user_image"
                android:onClick="uploadImageMethod"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="3"
            >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:hint="name:"
                android:textSize="20dp"
                android:id="@+id/user_name" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="age:"
                android:textSize="20dp"
                android:inputType="number"
                android:id="@+id/user_age"
                />
            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Male"
                    android:layout_weight="1"
                    android:id="@+id/user_gender_male_radio"
                    android:onClick="genderSelection"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/user_gender_female_radio"
                    android:hint="Female"
                    android:onClick="genderSelection"
                    />
            </RadioGroup>

            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:id="@+id/user_looking4_spinner"
                android:scrollbarStyle="outsideInset"
                android:scrollbarSize="20dp"
                android:choiceMode="multipleChoice"
                />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:weightSum="4"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:onClick="ChooseStaticLocationMethod"
            android:layout_weight="1">
            <TextView
                android:id="@+id/address_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_below="@+id/address_header"
                android:id="@+id/address_str"
                android:textColor="@color/tw__composer_black"
                android:layout_alignParentLeft="true"
                android:text="Tap here to set address"
                />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:hint="describe your self in a few words"
                android:id="@+id/user_descreption"
                android:gravity="top"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:hint="nick-name"
                android:gravity="top"
                android:id="@+id/user_nickname" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:weightSum="1"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/done_edit"
                android:id="@+id/delete_bt"
                android:background="@color/tw__transparent"
                android:onClick="MoveToMainAndUploodUserToDB"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                />




        </LinearLayout>


    </LinearLayout>


</LinearLayout>





